{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard"
  ],
  "plugins": [
    "mocha"
  ],
  "env"     : {
    "browser": true,
    "mocha": true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "semi" : [2, "never"],
    "space-before-function-paren": ["error", "never"],
    "max-len": [2, 120, 2],
    "mocha/no-exclusive-tests": "error"
  }
}
